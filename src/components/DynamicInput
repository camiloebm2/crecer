import React from "react";

const DynamicInput = ({ label, value, onChange, type = "text", ...props }) => (
  <div className="input-container">
    <label>{label}</label>
    <input
      type={type}
      value={value}
      onChange={(e) => onChange(e.target.value)}
      {...props}
    />
  </div>
);

export default DynamicInput;
